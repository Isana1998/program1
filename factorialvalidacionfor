#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	int i,n, factorial;
	//validar el ingreso de valores correctos a n
	do{
		cout<<"ingrese el valor de n: ";
		cin>>n;
	}while (n<0);

	factorial=1 //inicializar el acumulador de productor a 1
	for (i=2; 1<=n; i++) // inicializa e incrementa
			factorial=factorial * i; // acumulador
	cout<<"el factorial de" << n <<"es"<< factorial;
	gecth ();
}
